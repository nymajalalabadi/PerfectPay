<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PerfectPay.MainPage"
             BackgroundColor="#323232">

    <ContentPage.Resources>

        <Color x:Key="SectionsColor">#444444</Color>
        <Color x:Key="LightFont">#d6d6d6</Color>
        <Color x:Key="DarkFont">#4fd8eb</Color>
        
    </ContentPage.Resources>

    <Grid Margin="15">

        <Grid.RowDefinitions>
            
            <RowDefinition Height="0.3*" />
            
            <RowDefinition Height="0.7*" />
            
        </Grid.RowDefinitions>
        

        
        <Frame Grid.Row="0" Padding="10" BackgroundColor="{StaticResource SectionsColor}" BorderColor="Transparent">

            <Grid>
                
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition />
                    
                    <ColumnDefinition Width="1" />
                    
                    <ColumnDefinition />
                    
                </Grid.ColumnDefinitions>
                
                
                <Grid.RowDefinitions>
                    
                    <RowDefinition Height=".1*" />

                    <RowDefinition Height=".9*" />
                    
                </Grid.RowDefinitions>

                <Label Grid.Row="0" 
                       Grid.ColumnSpan="3" 
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       Text="Total P/Person"
                       TextColor="{StaticResource DarkFont}"/>

                <Label x:Name="lblTotal"
                       Grid.Row="1"
                       Grid.Column="0"
                       FontAttributes="Bold"
                       FontSize="35"
                       HorizontalTextAlignment="Center"
                       Text="$0.00"
                       TextColor="{StaticResource LightFont}"
                       VerticalOptions="Center" />

                <BoxView BackgroundColor="AliceBlue"    
                          Grid.Row="1"
                          Grid.Column="1"
                          Margin="0,10,0,0"
                         VerticalOptions="Center"
                         Color="#adadad"/>

                <VerticalStackLayout Grid.Row="1"
                                       Grid.Column="2"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center">

                    <Label Text="SubTotal : $"
                           FontAttributes="Bold"
                           TextColor="{StaticResource LightFont}"/>

                    <Label x:Name="lblSubtotal"
                           FontAttributes="Bold"
                           Text="$0.00"
                           TextColor="{StaticResource LightFont}"/>

                    <Label Margin="0,10,0,0"
                           Text="TIP : $"
                           TextColor="{StaticResource LightFont}" />

                    <Label x:Name="lblTipByPerson"
                           FontAttributes="Bold"
                           Text="$0.00"
                           TextColor="{StaticResource LightFont}"/>

                </VerticalStackLayout>

            </Grid>
            
        </Frame>

        <Grid Grid.Row="1" Margin="0,15,0,0">
            
            <Grid.ColumnDefinitions>
                
                <ColumnDefinition Width=".3*" />

                <ColumnDefinition Width=".7*" />

            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>

                <RowDefinition  />
                
                <RowDefinition  />
                
                <RowDefinition  />
                
                <RowDefinition  />
                
            </Grid.RowDefinitions>
            

            <Label Grid.Column="0"
                   Grid.Row="0"
                   Text="Enter Your Bell : $"
                   VerticalOptions="Center"
                   TextColor="{StaticResource LightFont}"/>

            <Entry x:Name="txtBill"
                     Grid.Column="1"
                     Grid.Row="0"
                     Text="0.0"
                     Placeholder="Enter Bell Amount"
                     BackgroundColor="{StaticResource SectionsColor}"
                     TextColor="{StaticResource LightFont}"
                     Keyboard="Numeric"
                     VerticalOptions="Center"
                     Completed="txtBell_Completed"/>
            

            <Label  Grid.Column="0"
                    Grid.Row="1"
                    Text="Choose Your Tip : $"
                    VerticalOptions="Center"
                    TextColor="{StaticResource LightFont}"/>

            <HorizontalStackLayout Grid.Column="1" Grid.Row="1" HeightRequest="70" HorizontalOptions="CenterAndExpand" Spacing="10">

                <Button Text="10%"
                        WidthRequest="70" Clicked="Button_Clicked"/>

                <Button Text="15%"
                        WidthRequest="70" Clicked="Button_Clicked"/>

                <Button Text="20%"
                        WidthRequest="70" Clicked="Button_Clicked"/>

            </HorizontalStackLayout>
            

            <Label x:Name="lblTip"
                   Grid.Column="0"
                   Grid.Row="2"
                   Text="Tip : 0%"
                   VerticalOptions="Center"
                   TextColor="{StaticResource LightFont}"/>

            <Slider x:Name="sldTip"
                    Grid.Column="1"
                    Grid.Row="2"
                    Minimum="0"
                    Maximum="50" 
                    ValueChanged="sldTip_ValueChanged"/>
            

            <Label Grid.Column="0"
                   Grid.Row="3"
                   Text="Split The Total : "
                   VerticalOptions="Center"
                   TextColor="{StaticResource LightFont}"/>

            <HorizontalStackLayout Grid.Column="1" Grid.Row="3" HorizontalOptions="Center" VerticalOptions="Center">

                <Button  x:Name="btnMinus"
                        Text="-"
                        WidthRequest="70"
                        Clicked="btnMinus_Clicked"/>

                <Label x:Name="lblNoPersons"
                       Text="1"
                       TextColor="{StaticResource LightFont}"
                       Margin="-5,0,-5,0"
                       FontSize="25"
                       HeightRequest="50"
                       WidthRequest="100"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"/>

                <Button x:Name="btnPlus"
                        Text="+"
                        WidthRequest="70"
                        Clicked="btnPlus_Clicked"/>
                
            </HorizontalStackLayout>

        </Grid>
        
        
    </Grid>

</ContentPage>
